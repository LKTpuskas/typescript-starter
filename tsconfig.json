{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*", "site/**/*"]
}
